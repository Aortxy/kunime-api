{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "routes": [
    { "src": "^/$", "dest": "/api/index" },
    { "src": "^/healthz$", "dest": "/api/index" },
    { "src": "^/api/v1/.*$", "dest": "/api/index" }
  ],
  "build": {
    "env": {
      "GO_BUILD_FLAGS": "-ldflags '-s -w'"
    }
  }
}
