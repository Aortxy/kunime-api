{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/", "destination": "/internal/api/index.go" },
    { "source": "/api/v1/:path*", "destination": "/internal/api/index.go" },
    { "source": "/healthz", "destination": "/internal/api/index.go" }
  ],
  "build": {
    "env": {
      "GO_BUILD_FLAGS": "-ldflags '-s -w'"
    }
  }
}
